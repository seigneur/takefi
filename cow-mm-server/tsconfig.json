{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "chainlinkFunctionsService.js", "FunctionsConsumerABI.js", "getPreimageAndRedeem.js", "preimage-retrieval.js", "autoHTLCRedeemer.js", "bitcoin-rpc.js"],
  "exclude": ["node_modules", "dist"]
}